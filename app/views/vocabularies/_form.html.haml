= form_with(model: [@study_plan, @vocabulary_set, vocabulary]) do |form|
  - if vocabulary.errors.any?
    #error_explanation
      %h2
        = pluralize(vocabulary.errors.count, "error")
        prohibited this vocabulary from being saved:
      %ul
        - vocabulary.errors.each do |error|
          %li= error.full_message
  .row
    .col-lg-3
      .input-group.input-group-sm
        %span#sizing-addon3.input-group-addon Base Word
        = form.text_field :base_word, :class => "form-control", :placeholder => "Base word"
    .col-lg-3
      .input-group.input-group-sm
        %span#sizing-addon3.input-group-addon Translation
        = form.text_field :translation, :class => "form-control", :placeholder => "Translation"
    .col-lg-3
      .input-group.input-group-sm
        %span#sizing-addon3.input-group-addon Synonym
        = form.text_field :synonym, :class => "form-control", :placeholder => "Synonym"
    .col-lg-3
      .input-group.input-group-sm
        %span#sizing-addon3.input-group-addon Description
        = form.text_field :description, :class => "form-control", :placeholder => "Description"
  .actions.pull-right.m-5
    = form.submit :class => "btn btn-sm btn-primary"
