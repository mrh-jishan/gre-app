<p id="notice"><%= notice %></p>

<h1>Vocabularies</h1>

<table>
  <thead>
  <tr>
    <th>Vocabulary sets</th>
    <th>Base word</th>
    <th>Translation</th>
    <th>Synonym</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @vocabularies.each do |vocabulary| %>
    <tr>
      <td><%= vocabulary.base_word %></td>
      <td><%= vocabulary.translation %></td>
      <td><%= vocabulary.synonym %></td>
      <td><%= vocabulary.description %></td>
      <td><%= link_to 'Show', vocabulary %></td>
      <td><%= link_to 'Edit', edit_vocabulary_path(vocabulary) %></td>
      <td><%= link_to 'Destroy', vocabulary, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

